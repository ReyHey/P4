JFLEX      = Dependencies/jflex_dependencies/Jflex_Unix_Executable_file/jflex
JAVA       = java
JAVAC      = javac
CUPJAR     = Dependencies/java-cup-11b.jar
CP         = .:$(CUPJAR)
JAVACFLAGS = -cp $(CP)
CUP        = $(JAVA) -jar $(CUPJAR) -expect 2 -parser Parser

OUT = out
GEN = out/genfiles

PARSER_OUT ?= Parser.java sym.java

# --------------------------------------------------

Simpleton: compile
	$(JAVA) -cp $(CUPJAR):$(OUT) Simpleton

compile: lexer parser
	$(JAVAC) -cp $(CUPJAR):$(OUT) -d $(OUT) Simpleton.java $(GEN)/*.java

parser: Parser.java 

Parser.java: Parser.cup
	$(CUP) -interface Parser.cup
	mv $(PARSER_OUT) $(GEN)/

lexer: Lexer.java

Lexer.java: Lexer.flex
	$(JFLEX) -d $(GEN) Lexer.flex


testLexer: compile lexertest
	java -cp .:java-cup-11b.jar TestLexer input.txt
	 
lexertest:
	javac -cp java-cup-11b.jar TestLexer.java sym.java Lexer.java

clean:
	rm -f *.class
	rm -f *~
	rm -f Lexer.java
	rm -f Parser.java
	rm -f sym.java
	rm -rf $(OUT)
